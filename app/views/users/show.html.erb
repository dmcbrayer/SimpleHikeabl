
<div class="panel panel-default drop-shadow">
  <div class="panel-heading">
    <h1><%=@user.name %>'s Trips</h1>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Location</th>
        </tr>
      </thead>

      <tbody>
        <% @usertrips.each do |trip| %>
          <tr>
            <td><%= link_to trip.name, trip %></td>
            <td><%= trip.location %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
   </div>
</div>


