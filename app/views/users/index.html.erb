<% provide(:title, 'User Index') %>

<div class="panel panel-default drop-shadow">
  <div class="panel-heading">
    <h1>Listing Users</h1>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th></th>
          <th>User</th>
          <th>Email</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.avatar.url(:small), class: "img-circle"%>
            <td><%= link_to user.name, user %></td>
            <td><%= user.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
   </div>
</div>